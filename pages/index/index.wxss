/**index.wxss**/
.container{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.userinfo {
  padding-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #b3d4db;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top:100rpx;
  font-size:32rpx;
  font-weight: bold;
}

.usermotto {
  margin-top: 200rpx;
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align:center;
}
.user-motto{
  font-size:22rpx;
  font-weight: bold;
  line-height:80rpx;
  color: #405f80;
}
page{
  height: 100%;
  background-color:#b3d4db;
}